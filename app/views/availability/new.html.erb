<h1>Availability#new</h1>

<h1>//Doctor busy//</h1

<%= form_for @appoint do |f| %>
<div class="field">
  <%= f.label :speciality %>
  <%= f.select :speciality, Doctor.all.collect {|x| [x.speciality,x.speciality]}, { include_blank: 'Please select one' } %>
</div>

<div class="field">
  <%= f.label :doctor %>
  <%= f.select :doctor_id, Doctor.all.reorder('name ASC').collect {|x| [x.name,x.id,{:class => "toggle_doctors hidden #{x.speciality}"}]}, { include_blank: 'Select Speciality' } %>
</div>

<div class="field">
  <%= f.label :date %>
  <%= f.date_field :date, placeholder: "YYYYMMMDD" %>
</div>

<div class="field">
  <label for="appoint_time_slot">Time slot</label>
  <select name="appoint[time_slot]" id="appoint_time_slot">
    <option value="" disabled selected>Input date</option>
  </select>
</div>


<div class="actions">
  <%= f.submit "Login" %>
</div>
<% end %>

<%= link_to 'Back', './' %>
